@using MVCOnlineTicariOtomasyon.Models.Siniflar;
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="m-5">Ürün Listesi</h2>
<div class="col-12  border-dark">

    <table id="tbl1" class="table  table-striped table-hover table-light  m-4">
        <thead class="thead-dark border-dark">
            <tr>
                <th>ID</th>
                <th>Ürün Adı</th>
                <th>Ürün Markası</th>
                <th>Ürün Stoğu</th>
                <th>Ürün Alış Fiyatı</th>
                <th>Ürün Satış Fiyatı</th>
                <th>Ürün Kategorisi</th>
                <th>Ürün Görseli</th>
                <th>Aksiyonlar</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody class="">
            @foreach (var u in Model)
            {


                <tr class="@(u.Stok < 20 ? "table-danger ":u.Stok <50?"table-warning":"table-success")">
                    <td class="border-dark">
                        @u.UrunId
                    </td>
                    <td class="border-dark">
                        @u.UrunAd
                    </td>
                    <td class="border-dark">
                        @u.Marka
                    </td>
                    <td class="border-dark">
                        @u.Stok
                    </td>
                    <td class="border-dark">
                        @u.AlisFiyat
                    </td>
                    <td class="border-dark">
                        @u.SatisFiyat
                    </td>
                    <td class="border-dark">
                        @u.Kategori.KategoriAd
                    </td>
                    <td class="border-dark">
                        @u.UrunGorsel
                    </td>
                    <td class="border-dark">
                        <a class="btn btn-success mb-2 text-light" href="/Urun/UrunEkle/@u.UrunId">Güncelle</a>
                        <a class="btn btn-warning text-light" href="/Urun/UrunDetay/@u.UrunId">Detay</a>
                        </td>
                    <td class="border-dark">
                        <a class="btn btn-danger text-light" href="/Urun/UrunSil/@u.UrunId">Sil</a>
                    </td>
                </tr>

            }

        </tbody>
    </table>


    <a href="/Urun/UrunEkle" class="m-4 btn btn-primary">Yeni Ürün Ekle</a>
</div>


<link href="~/Content/bootstrap.css" rel="stylesheet" />


<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>

<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.js"></script>

<script>
    $('#tbl1').dataTable({});
</script>