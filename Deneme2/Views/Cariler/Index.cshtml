@using MVCOnlineTicariOtomasyon.Models.Siniflar;
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2 class="m-5">Cariler Listesi</h2>
<div class="col-12  border-dark">


    <table class="table  table-striped table-hover table-light  m-4">
        <thead class="thead-dark border-dark">

            <tr>
                <th>ID</th>
                <th>Cari Adı</th>
                <th>Ünvan</th>
                <th>Şehir</th>
                <th>Mail</th>
                <th>Aksiyonlar</th>
            </tr>
        </thead>
        @foreach (var k in Model)
        {

            <tr>
                <td>
                    @k.CariId
                </td>
                <td>
                    @(k.CariAd + " " + k.CariSoyad)
                </td>
                <td>
                    @k.CariUnvan
                </td>
                <td>@k.CariSehir</td>
                <td>@k.CariMail</td>
                <td>
                    <a class="btn btn-success mr-2 text-light" href="/Cariler/CariEkle/@k.CariId">Güncelle</a>
                    <a class="btn btn-danger mr-2 text-light" href="/Cariler/CariSil/@k.CariId">Sil</a>
                    <a class="btn btn-warning text-light" href="/Cariler/MusteriSatis/@k.CariId">Detay</a>
                </td>
            </tr>

        }
    </table>

    <a href="/Cariler/CariEkle" class="m-4 btn btn-info">Cari Ekle</a>
</div>
