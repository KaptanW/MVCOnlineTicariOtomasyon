@model MVCOnlineTicariOtomasyon.Models.Siniflar.Cariler

@{
    ViewBag.Title = "CariEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2 class="m-4">@ViewBag.Cari</h2>


<form class="form-group" method="post">
    <div class="d-flex row  p-5">
        <div class="px-5  col-5 mb-5">

            @Html.HiddenFor(x => x.CariId)
            <label class="h5">Carinin Adı</label>
            @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control " })
            @Html.ValidationMessageFor(x => x.CariAd, "", new { @style = "color:red" })
        </div>
        <div class="px-5  col-5 mb-5">

            <label class="h5">Carinin Soyadı</label>
            @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control " })
            @Html.ValidationMessageFor(x => x.CariSoyad, "", new { @style = "color:red" })
        </div>
        <div class="px-5  col-5 mb-5">

            <label class="h5">Unvanı</label>
            @Html.TextBoxFor(x => x.CariUnvan, new { @class = "form-control " })
        </div>
        <div class="px-5  col-5 mb-5">

            <label class="h5">Şehir</label>
            @Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control " })
        </div>
        <div class="px-5  col-5 mb-5">

            <label class="h5">E-Mail</label>
            @Html.TextBoxFor(x => x.CariMail, new { @class = "form-control " })
        </div>

    </div>

<div class="ml-5 p-5">

    <button type="submit" class="btn btn-primary mr-5" style="width:10%">Ekle</button>
    @Html.ActionLink("Geri Dön", "Index", null, new { @class = "btn btn-success mr-2 text-light",style = "width:10%" })
</div>
</form>


