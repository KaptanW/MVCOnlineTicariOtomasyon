@using MVCOnlineTicariOtomasyon.Models.Siniflar;
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="m-5">Faturalar</h2>
<div class="col-12  border-dark">


    <table id="tbl1" class="table  table-striped table-hover table-light  ">
        <thead class="thead-dark border-dark">

            <tr>
                <th>ID</th>
                <th>Seri No</th>
                <th>Sıra No</th>
                <th>Tarih</th>
                <th>Saat</th>
                <th>Toplam</th>
                <th>Vergi Dairesi</th>
                <th>Teslim Eden</th>
                <th>Teslim Alan</th>
                <th class="px-3">Aksiyonlar</th>
            </tr>
        </thead>
        @foreach (var k in Model)
        {

            <tr>
                <td>
                    @k.FaturaId
                </td>
                <td>
                    @k.FaturaSeriNo
                </td>
                <td>
                    @k.FaturaSıraNo
                </td>
                <td>
                    @k.Tarih.ToString("ddd-dd/MM/yyyy")
                </td>
                <td>
                    @k.Saat
                </td>
                <td>
                    @k.Toplam
                </td>
                <td>
                    @k.VergiDairesi
                </td>
                <td>
                    @k.TeslimEden
                </td>
                <td>
                    @k.TeslimAlan
                </td>
                <td>
                    <a class="btn btn-success mx-3 text-light" href="/Fatura/FaturaEkle/@k.FaturaId">Güncelle</a>
                    @*<a class="btn btn-danger mr-2 text-light" href="/Personel/PersonelSil/@k.SatisId">Sil</a>*@
                </td>
            </tr>

        }
    </table>

    <a href="/Fatura/FaturaEkle" class="m-4 btn  btn-info">Yeni Fatura Ekle</a>
</div>


<link href="~/Content/bootstrap.css" rel="stylesheet" />


<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>

<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.js"></script>

<script>
    $('#tbl1').dataTable({});
</script>


