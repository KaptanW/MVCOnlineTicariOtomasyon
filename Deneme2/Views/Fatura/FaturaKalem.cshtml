@using MVCOnlineTicariOtomasyon.Models.Siniflar;
@model List<FaturaKalem>
<div class="col-12  mb-5 border-dark">


    <table id="tbl2" class="table  table-striped table-hover table-light  ">
        <thead class="thead-dark border-dark">

            <tr>
                <th>ID</th>
                <th>Birim Fiyat</th>
                <th>Miktar</th>
                <th>Tutar</th>
                <th>Açıklama</th>
                <th class="px-3">Aksiyonlar</th>
            </tr>
        </thead>
        @foreach (var k in Model)
        {

            <tr>
                <td>
                    @k.Faturaid
                </td>
                <td>
                    @k.BirimFiyat
                </td>
                <td>
                    @k.Miktar
                </td>
                <td>
                    @k.Tutar
                </td>
                <td>
                    @k.Aciklama
                </td>
                <td>
                    <a class="btn btn-danger mr-2 text-light" href="/Fatura/FaturaDetaySil/@k.FaturaKalemId">Sil</a>
                </td>
            </tr>

        }
    </table>


</div>


<link href="~/Content/bootstrap.css" rel="stylesheet" />


<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet" />

