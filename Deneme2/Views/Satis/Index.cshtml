@using MVCOnlineTicariOtomasyon.Models.Siniflar;
@model List<SatisHaraket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2 class="m-5">Satış Haraketleri</h2>
<div class="col-12  border-dark">


    <table id="tbl1" class="table  table-striped table-hover table-light  ">
        <thead class="thead-dark border-dark">

            <tr>
                <th>ID</th>
                <th>Tarih</th>
                <th>Ürün</th>
                <th>Adet</th>
                <th>Fiyat</th>
                <th>Toplam Tutar</th>
                <th>Carinin Adı</th>
                <th>Personelin Adı</th>
                <th class="px-3">Aksiyonlar</th>
            </tr>
        </thead>
        @foreach (var k in Model)
        {

            <tr>
                <td>
                    @k.SatisId
                </td>
                <td>
                    @k.Tarih.ToString("MM-yyyy")
                </td>
                <td>
                    @k.Urun.UrunAd
                </td>
                <td>
                    @k.Adet
                </td>
                <td>
                    @k.Fiyat.ToString("C0")
                </td>
                <td>
                    @k.ToplamTutar.ToString("C0")
                </td>
                <td>
                    @(k.Cariler.CariAd + " " + k.Cariler.CariSoyad)
                </td>
                <td>
                    @(k.Personel.PersonelAd + " " + k.Personel.PersonelSoyad)
                </td>
                <td>
                    <a class="btn btn-success mx-3 text-light" href="/Satis/SatisEkle/@k.SatisId">Güncelle</a>
                    @*<a class="btn btn-danger mr-2 text-light" href="/Personel/PersonelSil/@k.SatisId">Sil</a>*@
                    <a class="btn btn-warning text-light" href="/Satis/SatisDetay/@k.SatisId">Detay</a>
                </td>
            </tr>

        }
    </table>

    <a href="/Satis/SatisEkle" class="m-4 btn  btn-info">Yeni Satış Ekle</a>
</div>


<link href="~/Content/bootstrap.css" rel="stylesheet" />


<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>

<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.js"></script>

<script>
    $('#tbl1').dataTable({});
</script>


