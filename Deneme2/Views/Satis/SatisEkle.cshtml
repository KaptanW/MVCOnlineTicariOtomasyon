@model MVCOnlineTicariOtomasyon.Models.Siniflar.SatisHaraket

@{
    ViewBag.Title = "SatisEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2 class="m-4">@ViewBag.Satis</h2>


<form class="form-group" method="post">
    <div class="d-flex row p-5">

        <div class="px-5  col-5">

            <label class="h5">Ürün</label>
            @Html.DropDownListFor(x => x.Urunid, (List<SelectListItem>)ViewBag.Urunlistesi, new { @class = "form-control mb-5" })
        </div>
        <div class="px-5  col-5">

            <label class="h5">Adet</label>
            @Html.TextBoxFor(x => x.Adet, new { @class = "form-control mb-5" })
        </div>
        <div class="px-5  col-5">

            <label class="h5">Cari</label>
            @Html.DropDownListFor(x => x.Cariid, (List<SelectListItem>)ViewBag.Carilistesi, new { @class = "form-control mb-5" })
        </div>
        <div class="px-5  col-5">

            <label class="h5">Satan Personel</label>
            @Html.DropDownListFor(x => x.Personelid, (List<SelectListItem>)ViewBag.Personellistesi, new { @class = "form-control mb-5" })
        </div>
    </div>
    <div class="ml-5 px-5">
        <button type="submit" class="btn btn-primary" style="width:10%">Ekle</button>

    </div>
    @Html.HiddenFor(x => x.SatisId)
</form>