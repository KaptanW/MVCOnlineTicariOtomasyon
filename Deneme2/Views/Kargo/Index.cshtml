@using MVCOnlineTicariOtomasyon.Models.Siniflar;
@model List<Kargodetay>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="m-5">Kargo Listesi</h2>
<div class="col-12  border-dark">


    <table id="tbl1" class="table  table-striped table-hover table-light  m-4">
        <thead class="thead-dark border-dark">

            <tr>
                <th>ID</th>
                <th>Açıklama</th>
                <th>Takip Kodu</th>
                <th>Personel</th>
                <th>Alıcı</th>
                <th>Tarih</th>
                <th>Aksiyonlar</th>
            </tr>
        </thead>
        @foreach (var k in Model)
        {

            <tr>
                <td>
                    @k.KargoDetayid
                </td>
                <td>
                    @k.Aciklama
                </td>
                <td>
                    @k.TakipKodu
                </td>
                <td>@k.Personel</td>
                <td>@k.Alici</td>
                <td>@k.Tarih</td>
                <td>
                    <a class="btn btn-success mr-2 text-light" href="/Kargo/KargoEkle/@k.KargoDetayid">Güncelle</a>
                    <a class="btn btn-danger mr-2 text-light" href="/Kargo/KargoSil/@k.KargoDetayid">Sil</a>
                </td>
            </tr>

        }
    </table>

    <a href="/Kargo/KargoEkle" class="m-4 btn btn-info">Kargo Ekle</a>
</div>

<link href="~/Content/bootstrap.css" rel="stylesheet" />


<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>

<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.js"></script>

<script>
    $('#tbl1').dataTable({});
</script>