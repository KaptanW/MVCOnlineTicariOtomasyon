@model IEnumerable<MVCOnlineTicariOtomasyon.Models.Siniflar.sinifgrup3>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Marka Tablosu</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Marka</th>
                    <th>Progress</th>
                    <th style="width: 40px">Toplam</th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 0;} 
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@{i++;} @i</td>
                        <td>@x.marka</td>
                        @if (i % 4 == 1)
                        {

                            <td>
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger bg-info" style="width: 55%"></div>
                                </div>
                            </td>

                        }
                        @if (i % 4 == 2)
                        {

                            <td>
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-success bg-danger" style="width: 55%"></div>
                                </div>
                            </td>

                        }
                        @if (i % 4 == 3)
                        {

                            <td>
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-warning bg-warning" style="width: 55%"></div>
                                </div>
                            </td>

                        }
                        @if (i % 4 == 0)
                        {

                            <td>
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-info bg-success" style="width: 55%"></div>
                                </div>
                            </td>

                        }
                        <td><span class="badge bg-danger">@x.sayi</span></td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>