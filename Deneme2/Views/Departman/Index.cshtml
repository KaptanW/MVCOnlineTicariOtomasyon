@using MVCOnlineTicariOtomasyon.Models.Siniflar;
@model List<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="m-5">Departman Listesi</h2>
<div class="col-12  border-dark">


    <table class="table  table-striped table-hover table-light  m-4">
        <thead class="thead-dark border-dark">

            <tr>
                <th>ID</th>
                <th>Departman Adı</th>
                <th>Aksiyonlar</th>
            </tr>
        </thead>
        @foreach (var k in Model)
        {

            <tr>
                <td>
                    @k.Departmanid
                </td>
                <td>
                    @k.DepartmanAd
                </td>
                <td>
                    <a class="btn btn-success mr-2 text-light" href="/Departman/DepartmanEkle/@k.Departmanid">Güncelle</a>
                    <a class="btn btn-danger mr-2 text-light" href="/Departman/DepartmanSil/@k.Departmanid">Sil</a>
                    <a class="btn btn-warning text-light" href="/Departman/DepartmanDetay/@k.Departmanid">Detay</a>
                </td>
            </tr>

        }
    </table>

    <a href="/Departman/DepartmanEkle" class="m-4 btn btn-info">Departman Ekle</a>
</div>
