@using MVCOnlineTicariOtomasyon.Models.Siniflar;
@model List<Personel>

@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="m-5">@ViewBag.DepartmanAd Departmanın Detayı</h2>

<div class="col-12  border-dark">


    <table class="table  table-striped table-hover table-light  m-4">
        <thead class="thead-dark border-dark">

            <tr>
                <th>ID</th>
                <th>Personel Adı</th>
                <th>Personel Soyadı</th>
                <th>Personel Görseli</th>
                <th>Aksiyonlar</th>
            </tr>
        </thead>
        @foreach (var p in Model)
        {

            <tr>
                <td>
                    @p.PersonelId
                </td>
                <td>
                    @p.PersonelAd
                </td>
                <td>
                    @p.PersonelSoyad
                </td>
                <td>
                    @p.PersonelGorsel
                </td>
                <td>

                    <a href="/Departman/DepartmanPersonelSatis/@p.PersonelId" class="btn btn-info">Satışlar</a>
                </td>
            </tr>

        }
    </table>

</div>
<div class="m-5">
    @Html.ActionLink("Güncelle", "DepartmanEkle", new { id = ViewBag.DepartmanId }, new {@class ="btn btn-success mr-2 text-light mr-5 "}) 
    @Html.ActionLink("Geri Dön", "Index",null, new { @class = "btn btn-success mr-2 text-light" })
</div>
